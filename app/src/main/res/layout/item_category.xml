<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/item_category_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/category_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foregroundTint="@color/white_light"
        android:contentDescription="@string/content_description"
        tools:src="@drawable/beaker_check" />

    <TextView
        style="@style/DarkStyle"
        android:theme="@style/DarkStyle"
        android:id="@+id/category_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Наименование категории"
        android:elegantTextHeight="true"
        android:layout_marginStart="10dp"
        android:textAlignment="textStart"
        android:textSize="24sp" />

</LinearLayout>